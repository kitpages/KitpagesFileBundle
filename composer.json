{
    "name": "kitpages/file-bundle",
    "type": "symfony-bundle",
    "description": "FileBundle manages uploads and manipulations of files for the Kitpages CMS Bundle",
    "keywords": ["Files", "upload", "resize", "encoding", "kitpages cms"],
    "homepage": "https://github.com/kitpages/KitpagesFileBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastien Lefebvre"
        },
        {
            "name": "Philippe Le Van",
            "homepage": "https://twitter.com/#!/plv"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "symfony/framework-bundle": "~2.1",
        "avalanche123/imagine-bundle": "2.1.*",
        "kitpages/file-system-bundle": "~3.1",
        "kitpages/util-bundle": "~3.0",
        "doctrine/orm": "~2.2",
        "doctrine/doctrine-bundle": "~1.1",
        "symfony/monolog-bundle": "~2.1"
    },
    "require-dev": {
        "symfony/class-loader": "~2.1",
        "symfony/yaml": "~2.1",
        "symfony/finder": "~2.1",
        "symfony/browser-kit": "~2.1",
        "doctrine/doctrine-fixtures-bundle": "*",

        "beberlei/DoctrineExtensions": "dev-master",
        "phpunit/phpunit": "~3.7",
        "phpunit/dbunit": "~1.3.1",
        "liip/functional-test-bundle": "dev-master",

        "patchwork/dumper": "~1.2"
    },
    "autoload": {
        "psr-0": { "Kitpages\\FileBundle": "" }
    },
    "target-dir": "Kitpages/FileBundle"
}